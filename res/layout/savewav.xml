<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <EditText android:layout_height="wrap_content" android:id="@+id/txtOjName" android:text=""
              android:layout_width="fill_parent"
              android:singleLine="true"
              android:inputType="textCapWords"
              android:hint="(Optional) Name your sound here"></EditText>

    <LinearLayout
            android:orientation="vertical"
            android:background="@android:drawable/bottom_bar"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_below="@+id/txtOjName">

        <Button
                android:id="@+id/play_again_button"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="Play Again"
                />

        <Button
                android:id="@+id/save_plain_button"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="Save"
                />

        <Button
                android:id="@+id/save_ringtone_button"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="Save as Ringtone"
                />
        <Button
                android:id="@+id/save_ringtone_contact_button"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="Save as Ringtone for Contact..."
                />
        <Button
                android:id="@+id/save_notification_button"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="Save as Notification"
                />

    </LinearLayout>
</RelativeLayout>
